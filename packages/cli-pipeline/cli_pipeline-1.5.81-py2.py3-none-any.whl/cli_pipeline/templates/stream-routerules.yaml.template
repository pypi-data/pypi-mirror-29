apiVersion: config.istio.io/v1alpha2 
kind: RouteRule 
metadata:
  name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}-{{ PIPELINE_MODEL_TAG }}-topics
spec:
   destination: 
      name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}-{{ PIPELINE_MODEL_TAG }}
   match:
     request:
       headers:
         uri:
           prefix: /stream/api/{{ PIPELINE_MODEL_NAME }}/{{ PIPELINE_MODEL_TAG }}/topics
   rewrite:
     uri: /topics
   precedence: 2
---
