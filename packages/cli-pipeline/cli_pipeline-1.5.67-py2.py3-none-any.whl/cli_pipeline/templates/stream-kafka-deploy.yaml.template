apiVersion: extensions/v1beta1
kind: Deployment 
metadata:
  name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }} 
  labels:
    app: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}
    broker: kafka 
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }}
        broker: kafka 
    spec:
      containers:
      - name: {{ PIPELINE_IMAGE_REGISTRY_NAMESPACE }}-{{ PIPELINE_MODEL_NAME }} 
        image: docker.io/pipelineai/stream-kafka:1.5.0
        imagePullPolicy: "Always"
        env:
        - name: PIPELINE_LOG_STREAM_TOPIC
          value: {{ PIPELINE_LOG_STREAM_TOPIC }}
        - name: PIPELINE_INPUT_STREAM_TOPIC
          value: {{ PIPELINE_INPUT_STREAM_TOPIC }} 
        - name: PIPELINE_OUTPUT_STREAM_TOPIC
          value: {{ PIPELINE_OUTPUT_STREAM_TOPIC }}
        - name: NUM_PARTITIONS
          value: "1"
        - name: NUM_REPLICAS
          value: "1"
        - name: POD_IP
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        ports:
        - containerPort: 9092
        - containerPort: 8082
        - containerPort: 8081
#        - containerPort: 2181
