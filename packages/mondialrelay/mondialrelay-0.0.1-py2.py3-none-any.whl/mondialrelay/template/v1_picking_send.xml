<?xml version="1.0" encoding="utf-8"?>
<ShipmentCreationRequest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.example.org/Request">
    <Context>
        <Login>${username}</Login>
        <Password>${password}</Password>
        <CustomerId>${customerid}</CustomerId>
        <Culture>${culture}</Culture>
        <VersionAPI>1.0</VersionAPI>
    </Context>
    <OutputOptions>
        <OutputFormat>${output_format}</OutputFormat>
        <OutputType>${output_type}</OutputType>
    </OutputOptions>
    <ShipmentsList>
        <Shipment>
            <OrderNo>${OrderNo}</OrderNo>
            <CustomerNo>${CustomerNo}</CustomerNo>
            <ParcelCount>${ParcelCount}</ParcelCount>
            <DeliveryMode Mode="${DeliveryMode}" Location="${DeliveryLocation}" />
            <CollectionMode Mode="${CollectionMode}" Location="${CollectionLocation}" />
            <Parcels>
              <Parcel>
                  <Content>${ParcelContent}</Content>
                  <Weight Value="${Weight}" Unit="${WeightUnit}" />
              </Parcel>
            </Parcels>
            <DeliveryInstruction>${DeliveryInstruction}</DeliveryInstruction>
            <Sender>
                <Address>
                    <Title>${SenderTitle}</Title>
                    <Firstname>${SenderFirstname}</Firstname>
                    <Lastname>${SenderLastname}</Lastname>
                    <Streetname>${SenderStreetname}</Streetname>
                    <HouseNo>${SenderHouseNo}</HouseNo>
                    <CountryCode>${SenderCountryCode}</CountryCode>
                    <PostCode>${SenderPostCode}</PostCode>
                    <City>${SenderCity}</City>
                    <AddressAdd1>${SenderAddressAdd1}</AddressAdd1>
                    <AddressAdd2>${SenderAddressAdd2}</AddressAdd2>
                    <AddressAdd3>${SenderAddressAdd3}</AddressAdd3>
                    <PhoneNo>${SenderPhoneNo}</PhoneNo>
                    <MobileNo>${SenderMobileNo}</MobileNo>
                    <Email>${SenderEmail}</Email>
                </Address>
            </Sender>
            <Recipient>
                <Address>
                    <Title>${RecipientTitle}</Title>
                    <Firstname>${RecipientFirstname}</Firstname>
                    <Lastname>${RecipientLastname}</Lastname>
                    <Streetname>${RecipientStreetname}</Streetname>
                    <HouseNo>${RecipientHouseNo}</HouseNo>
                    <CountryCode>${RecipientCountryCode}</CountryCode>
                    <PostCode>${RecipientPostCode}</PostCode>
                    <City>${RecipientCity}</City>
                    <AddressAdd1>${RecipientAddressAdd1}</AddressAdd1>
                    <AddressAdd2>${RecipientAddressAdd2}</AddressAdd2>
                    <AddressAdd3>${RecipientAddressAdd3}</AddressAdd3>
                    <PhoneNo>${RecipientPhoneNo}</PhoneNo>
                    <MobileNo>${RecipientMobileNo}</MobileNo>
                    <Email>${RecipientEmail}</Email>
                </Address>
            </Recipient>
        </Shipment>
    </ShipmentsList>
</ShipmentCreationRequest>
