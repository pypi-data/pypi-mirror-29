#:kivy 1.0

<Controller>:
    video_player_wid: video_player

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: '[color=0066ff]VAIS[/color] [color=000066]Speech Recognition Demo[/color]'
            font_size: '40sp'
            markup: True
        VideoPlayer:
            id: video_player
            source: 'video.mp4'
            allow_fullscreen: False
            state: 'pause'
        Label:
            text: '[color=000066]' + root.asr_result + '[/color]'
            font_size: '25sp'
            markup: True
            halign: "left"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "play"
                on_press: root.play_video()
            Button:
                text: "stop"
                on_press: root.stop_video()
