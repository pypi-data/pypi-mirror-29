#:kivy 1.0

<Controller>:
#    label_wid: my_custom_label

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: '[color=0066ff]VAIS[/color] [color=000066]Speech Recognition Demo[/color]'
                font_size: '40sp'
                markup: True
            Label:
                text: '[color=000066]' + root.asr_result + '[/color]'
                font_size: '20sp'
                markup: True
                halign: "left"

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Record'
                on_press: root.do_mic()
            Button:
                text: 'Stop'
                on_press: root.do_stop()
