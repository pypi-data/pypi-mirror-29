        Command:
            id = 'exopy.pulses.workspace.new'
            description = NEW_DESCRIPTION
            handler = new_sequence
        Command:
            id = 'exopy.pulses.workspace.save'
            description = SAVE_DESCRIPTION
            handler = save_sequence
        Command:
            id = 'exopy.pulses.workspace.save_as'
