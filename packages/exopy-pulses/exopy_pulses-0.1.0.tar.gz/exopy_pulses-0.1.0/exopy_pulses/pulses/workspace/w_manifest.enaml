def load_sequence(event):
    """Load sequence from a file.

    """
    workbench = event.workbench
    plugin = workbench.get_plugin('exopy.pulses')
    plugin.workspace.load_sequence('file')


LOAD_DESCRIPTION = load_sequence.__doc__


