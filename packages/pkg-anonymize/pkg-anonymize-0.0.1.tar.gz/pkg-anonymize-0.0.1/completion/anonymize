# bash completion for anonymize                            -*- shell-script -*-

_anonymize()
{
    local cur prev words cword
    _init_completion || return

    case $prev in
        -s|set)
            COMPREPLY=( $( compgen -W 'hostname virtual-private-network mac-address' -- "$cur" ) )
            return
            ;;

        -H|hostname)
            COMPREPLY=( $( compgen -W 'random' -- "$cur" ) )
            return
            ;;

        -M|mac-address)
            _available_interfaces -a
            return
            ;;

        -V|virtual-private-network)
            _filedir -d
            return
            ;;

        -i|init|-c|env|-e|exec|execute|-h|--help|help|-v|--version)
            return
            ;;
    esac

    COMPREPLY=( $( compgen -W 'init exec set env help' -- "$cur" ) )
} &&
complete -F _anonymize anonymize

# ex: filetype=sh
